<%= form_tag(filterd_by_date_patients_path,{:method => :get}) do %>
  <%= text_field_tag :from,params[:from],id: 'datepicker', placeholder: 'From'%>
  <%= text_field_tag :till,params[:till], id: 'datepicker1', placeholder: 'To'%>
  <%= submit_tag 'Get Data', class: 'btn btn-primary m_bottom10'%> 
<% end %>

<%if @show_import%>
  <%= form_tag(generate_pdf_patients_path,{:method => :get}) do %>
    <%= select_tag "import_to", options_for_select([["Select" , "" ]] + ['pdf', 'csv','excel', 'json']) %>
    <%= submit_tag 'Import', class: 'btn btn-danger m_bottom10'%> 
  <% end %>

  <div class="pull-right">
    <span class="date_font_size">From: <%= params[:from]%></span><br>
    <span class="date_font_size">To: <%= params[:till]%></span>
  </div>
<%end%>

<% query = @template.report_masters.first.report_sql.sql_query%>
<%header = @template.report_masters.first.report_header%>
<hr>
<div>
  <div style="<%=header.main_header_style%>"><%=header.main_header%></div><br>
  <!-- <span style="font-size:20px;font-weight:bold"><%#=header.header1%></span><br> -->
  <div style="font-size:17px;font-weight:bold"><%=header.header2%></div><br>
  <div style="<%= header.header3_style%>"><%=header.header3%></div>
</div>

<br>
<table class="table table-striped">
  <thead style="<%=header.table_header_style%>">
    <tr>
      <% @template.report_masters.first.report_datas.order("id asc").map(&:column_name).each do |header|%>
      <th><%= header.capitalize%></th>
      <%end%>

    </tr>
  </thead>
  <tbody>
     <%@calls.each do |call|%> 
      <tr>
        <td><%= call.callerid %></td>
        <td><%= call.patient.firstname %></td>
        <td><%= call.patient.dob.strftime("%m/%d/%Y") %></td>
        <td><%= call.call_received_at.strftime("%m/%d/%Y %r") %></td>
        <td><%= call.calltype %></td>
      </tr>
    <% end %>
  </tbody>
</table>

